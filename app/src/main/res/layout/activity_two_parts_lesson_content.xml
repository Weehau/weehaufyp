<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.toshiba.weehaufyp.TwoPartsLessonContentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song__list_header"
        android:text="@string/song_list_header"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/buttons_holder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song__list_header"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/part_one_button"
            android:text="Part One"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:clickable="true"
            android:background="#404040"
            android:textColor="#e5e5e5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/part_two_button"
            android:text="Part Two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:clickable="true"
            android:background="#404040"
            android:textColor="#e5e5e5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset"
        android:layout_below="@+id/buttons_holder">

        <TextView
            android:id="@+id/lesson_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lesson content"
            android:padding="5dp"
            android:textSize="16dp"
            android:lineSpacingExtra="3dp"/>
    </ScrollView>
</RelativeLayout>
