<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_launcher"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/coverArtImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/songTitleTextView"
        android:layout_alignTop="@+id/coverArtImageView"
        android:layout_toRightOf="@+id/coverArtImageView"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Small Text"
        android:id="@+id/artistTextView"
        android:layout_below="@+id/songTitleTextView"
        android:layout_toRightOf="@+id/coverArtImageView"
        android:layout_toEndOf="@+id/coverArtImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Small Text"
        android:id="@+id/albumTextView"
        android:layout_below="@+id/artistTextView"
        android:layout_toRightOf="@+id/coverArtImageView"
        android:layout_toEndOf="@+id/coverArtImageView" />

</RelativeLayout>