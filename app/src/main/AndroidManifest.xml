<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.toshiba.weehaufyp" >

    <!-- Keep music playing even when device is idle -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/realistik_music"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- define new activities here if added manually -->
        <activity
            android:name=".LessonActivity"
            android:label="@string/title_activity_lesson" >
        </activity>
        <activity
            android:name=".CreditsActivity"
            android:label="@string/title_activity_credits" >
        </activity>
        <activity
            android:name=".SongSelectionActivity"
            android:label="@string/title_activity_song_selection"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name=".MusicService" />

        <activity
            android:name=".SongListActivity"
            android:label="@string/title_activity_song_list" >
        </activity>
        <activity
            android:name=".AudioPlayerActivity"
            android:label="@string/title_activity_audio_player" >
        </activity>

        <service android:name=".MusicService" />

        <activity
            android:name=".TestFragment"
            android:label="@string/title_activity_test_fragment" >
        </activity>
    </application>

</manifest>
